
<section class="section">
<div class="registration-steps">
  <div class="step one">
    <span class="pink circle">1</span>
    <p>Register with Github</p>
  </div>
  <div class="pink-line"></div> <%# css line %>
  <div class="step two">
    <span class="yellow circle">2</span>
    <p>About You</p>
  </div>
  <div></div> <%# css line %>
   <div class="step three">
    <span class="pink-open circle">3</span>
    <p>Start Contributing</p>
  </div>
</div>
</section>
<section class="section reg-content">
  <div>
    <h1 class="title is-1">About you</h1>
    <p>Please confirm your email address and accept the terms.</p>
     <%= form_for :user, url: { action: 'update' }, method: :patch do |f| %>
      <% if @current_user.errors.any? %>
         <p class="error"><%= @current_user.errors.full_messages %></p>
      <% end %>
      <%= f.select :email, @emails %>
     <p><%= f.check_box :terms_acceptance %> I have read and understand the <a href="https://do.co/hacktoberconduct">Code of Conduct</a> <br />
        <%= f.check_box :marketing_emails %> Send me updates related to the Hacktoberfest community, open source, and products from DigitalOcean.
      </p>
      <%= f.submit 'Start Hacking', :class => 'button'%>
    <% end %>
  </div>
</section>
